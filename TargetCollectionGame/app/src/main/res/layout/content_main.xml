<?xml version="1.0" encoding="utf-8"?>

<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".View.MainActivity"
    tools:showIn="@layout/activity_main"
    android:background="#000000">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mainLogo"
            android:layout_column="0"
            android:minWidth="100dp"
            android:minHeight="50dp"
            android:adjustViewBounds="true"
            android:maxWidth="330dp" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/chapterImage"
            android:layout_column="0"
            android:paddingBottom="50dp"
            android:paddingRight="100dp" />
    </TableRow>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"></TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"></TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"></TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"></TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"></TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"></TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"></TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"></TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="     Level 1     "
                android:id="@+id/level1"
                android:layout_column="0"
                android:onClick="sendMessage"
                android:background="#3a1d32"
                android:textColor="#cae4c3" />

            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ratingBar1"
                android:layout_column="18"
                android:numStars="4"
                android:longClickable="false"
                android:isIndicator="true"
                android:progressTint="#4700aa"
                android:rating="3"
                android:secondaryProgressTint="#000000"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="6dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView"
                android:layout_column="19" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Score: "
                android:id="@+id/Level1ScoreText"
                android:layout_column="21"
                android:textColor="#786f6f"
                android:enabled="false"
                android:visibility="invisible"
                android:layout_marginTop="15dp"
                android:textSize="12dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Level 2"
                android:id="@+id/level2"
                android:layout_column="0"
                android:onClick="sendMessage"
                android:textColor="#cae4c3"
                android:background="#3a1d32" />

            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ratingBar2"
                android:layout_column="18"
                android:numStars="4"
                android:longClickable="false"
                android:isIndicator="true"
                android:progressTint="#4700aa"
                android:rating="3"
                android:secondaryProgressTint="#000000"
                android:layout_marginRight="6dp"
                android:layout_marginLeft="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Score"
                android:id="@+id/Level2ScoreText"
                android:layout_column="21"
                android:textColor="#786f6f"
                android:visibility="invisible"
                android:layout_marginTop="15dp"
                android:textSize="12dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Level 3"
                android:id="@+id/level3"
                android:layout_column="0"
                android:onClick="sendMessage"
                android:background="#3a1d32"
                android:textColor="#cae4c3" />

            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ratingBar3"
                android:layout_column="18"
                android:numStars="4"
                android:longClickable="false"
                android:isIndicator="true"
                android:progressTint="#4700aa"
                android:rating="2"
                android:secondaryProgressTint="#000000"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="6dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Score"
                android:id="@+id/Level3ScoreText"
                android:layout_column="21"
                android:textColor="#786f6f"
                android:visibility="invisible"
                android:textSize="12dp"
                android:layout_marginTop="15dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Level 4"
                android:id="@+id/level4"
                android:layout_column="0"
                android:onClick="sendMessage"
                android:background="#3a1d32"
                android:textColor="#cae4c3" />

            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ratingBar4"
                android:layout_column="18"
                android:numStars="4"
                android:longClickable="false"
                android:isIndicator="true"
                android:progressTint="#4700aa"
                android:rating="0"
                android:secondaryProgressTint="#000000"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="6dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Score"
                android:id="@+id/Level4ScoreText"
                android:layout_column="21"
                android:textColor="#786f6f"
                android:visibility="invisible"
                android:layout_marginTop="15dp"
                android:textSize="12dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Level 5"
                android:id="@+id/level5"
                android:layout_column="0"
                android:onClick="sendMessage"
                android:background="#3a1d32"
                android:textColor="#cae4c3" />

            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ratingBar5"
                android:layout_column="18"
                android:numStars="4"
                android:longClickable="false"
                android:isIndicator="true"
                android:progressTint="#4700aa"
                android:rating="0"
                android:secondaryProgressTint="#000000"
                android:layout_marginRight="6dp"
                android:layout_marginLeft="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Score"
                android:id="@+id/Level5ScoreText"
                android:layout_column="21"
                android:textColor="#786f6f"
                android:visibility="invisible"
                android:textSize="12dp"
                android:layout_marginTop="15dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"></TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"></TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </TableRow>
    </TableLayout>
</TableLayout>
