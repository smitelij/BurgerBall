<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    layout_width="wrap_content"
    layout_height="wrap_content"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/MyActionBar">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mainLogo"
            android:src="@drawable/chapterselect"
            android:layout_column="0"
            android:minWidth="120dp"
            android:minHeight="60dp"
            android:maxWidth="120dp"
            android:maxHeight="60dp"
            android:layout_marginBottom="50dp"
            android:layout_marginTop="50dp"
            android:scaleType="fitCenter"
            android:layout_marginLeft="0dp"
            android:adjustViewBounds="true"
            android:cropToPadding="false" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="set 1"
                    android:id="@+id/set1button"
                    android:layout_column="8"
                    android:enabled="true"
                    android:onClick="sendMessage"
                    android:background="#2e202a"
                    android:maxWidth="500dp"
                    android:textColor="#ffffff"
                    android:layout_marginTop="10dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/smallstarred"
                    android:id="@+id/redstarimage"
                    android:scaleType="fitCenter"
                    android:maxWidth="30dp"
                    android:maxHeight="30dp"
                    android:minHeight="30dp"
                    android:minWidth="30dp"
                    android:adjustViewBounds="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="="
                    android:id="@+id/totalStars1Text"
                    android:layout_column="9"
                    android:textColor="#c5c5c5"
                    android:textAlignment="textStart"
                    android:paddingLeft="5dp"
                    android:layout_marginTop="15dp"
                    android:textStyle="bold"
                    android:textSize="22dp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"></TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"></TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="set 2"
                    android:id="@+id/set2button"
                    android:layout_column="8"
                    android:onClick="sendMessage"
                    android:background="#161014"
                    android:layout_marginTop="10dp"
                    android:maxWidth="500dp"
                    android:textColor="#5b5b5b"
                    android:enabled="true" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/smallstargreen"
                    android:id="@+id/greenstarimage"
                    android:scaleType="fitCenter"
                    android:maxWidth="30dp"
                    android:maxHeight="30dp"
                    android:minHeight="30dp"
                    android:minWidth="30dp"
                    android:adjustViewBounds="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="="
                    android:id="@+id/totalStars2Text"
                    android:layout_column="9"
                    android:textColor="#c5c5c5"
                    android:textAlignment="textStart"
                    android:paddingLeft="5dp"
                    android:layout_marginTop="15dp"
                    android:maxWidth="300dp"
                    android:maxHeight="75dp"
                    android:longClickable="true"
                    android:textStyle="bold"
                    android:textSize="22dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="12 stars needed in set 1 to unlock"
                    android:id="@+id/set2locked"
                    android:layout_column="9"
                    android:textColor="#c5c5c5"
                    android:textAlignment="textStart"
                    android:paddingLeft="25dp"
                    android:layout_marginTop="15dp"
                    android:textStyle="bold"
                    android:textSize="10dp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="set 3"
                    android:id="@+id/set3button"
                    android:layout_column="8"
                    android:onClick="sendMessage"
                    android:background="#161014"
                    android:layout_marginTop="10dp"
                    android:maxWidth="500dp"
                    android:textColor="#5b5b5b"
                    android:enabled="true" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/smallstarblue"
                    android:id="@+id/bluestarimage"
                    android:scaleType="fitCenter"
                    android:maxWidth="30dp"
                    android:maxHeight="30dp"
                    android:minHeight="30dp"
                    android:minWidth="30dp"
                    android:adjustViewBounds="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="="
                    android:id="@+id/totalStars3Text"
                    android:layout_column="9"
                    android:textColor="#c5c5c5"
                    android:textStyle="bold"
                    android:textAlignment="textStart"
                    android:paddingLeft="5dp"
                    android:layout_marginTop="15dp"
                    android:textSize="22dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="12 stars needed in set 2 to unlock"
                    android:id="@+id/set3locked"
                    android:layout_column="9"
                    android:textColor="#c5c5c5"
                    android:textAlignment="textStart"
                    android:paddingLeft="25dp"
                    android:layout_marginTop="15dp"
                    android:textStyle="bold"
                    android:textSize="10dp" />
            </TableRow>

        </TableLayout>
    </TableRow>




</TableLayout>
    <TableLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="bottom"
        android:background="#000000">


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:gravity="bottom">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Total"
                android:id="@+id/totalStarsTotalText"
                android:layout_column="9"
                android:textColor="#8c8c8c"
                android:textAlignment="textStart"
                android:paddingLeft="5dp"
                android:layout_marginTop="15dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/smallstarblack"
                android:id="@+id/blackstarimage"
                android:scaleType="fitCenter"
                android:maxWidth="20dp"
                android:maxHeight="20dp"
                android:minHeight="20dp"
                android:minWidth="20dp"
                android:layout_marginLeft="10dp"
                android:adjustViewBounds="true"
                android:layout_marginBottom="18dp"
                android:alpha="0.7" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="="
                android:id="@+id/totalStarsTotal"
                android:layout_column="9"
                android:textColor="#8c8c8c"
                android:textAlignment="textStart"
                android:paddingLeft="5dp"
                android:layout_marginTop="15dp" />


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:gravity="bottom">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Score"
                android:id="@+id/totalScoreTotalText"
                android:layout_column="9"
                android:textColor="#8c8c8c"
                android:textAlignment="textStart"
                android:paddingLeft="5dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="-10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text=""
                android:id="@+id/totalScoreEmpty"
                android:layout_column="9"
                android:textColor="#c5c5c5"
                android:textStyle="bold"
                android:textAlignment="textStart"
                android:paddingLeft="5dp"
                android:layout_marginTop="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="="
                android:id="@+id/totalScoreTotal"
                android:layout_column="9"
                android:textColor="#8c8c8c"
                android:textAlignment="textStart"
                android:paddingLeft="5dp"
                android:layout_marginTop="15dp" />


        </TableRow>
    </TableLayout>
</RelativeLayout>
